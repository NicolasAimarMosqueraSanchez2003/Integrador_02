    <main>
    <h2>Editar Producto</h2>
    <form action="/api/productos/{{producto._id}}" method="POST" enctype="multipart/form-data" id="form-editar">
        <input type="hidden" name="_method" value="PUT">

        <label for="nombre">Nombre:</label>
        <input type="text" name="nombre" id="nombre" value="{{producto.nombre}}" required><br>

        <label for="precio">Precio:</label>
        <input type="number" name="precio" id="precio" value="{{producto.precio}}" step="0.01" required><br>

        <label for="stock">Stock:</label>
        <input type="number" name="stock" id="stock" value="{{producto.stock}}" required><br>

        <label for="marca">Marca:</label>
        <input type="text" name="marca" id="marca" value="{{producto.marca}}"><br>

        <label for="categoria">Categor√≠a:</label>
        <input type="text" name="categoria" id="categoria" value="{{producto.categoria}}"><br>

        <label for="descripcion_corta">Descripci√≥n corta:</label>
        <input type="text" name="descripcion_corta" id="descripcion_corta" value="{{producto.descripcion_corta}}" required><br>

        <label for="descripcion_larga">Descripci√≥n larga:</label>
        <textarea name="descripcion_larga" id="descripcion_larga">{{producto.descripcion_larga}}</textarea><br>

        <label for="envio_sin_cargo">Env√≠o sin cargo:</label>
        <input type="checkbox" name="envio_sin_cargo" {{#if producto.envio_sin_cargo}}checked{{/if}}><br>

        <label for="edad_desde">Edad desde:</label>
        <input type="number" name="edad_desde" value="{{producto.edad_desde}}"><br>

        <label for="edad_hasta">Edad hasta:</label>
        <input type="number" name="edad_hasta" value="{{producto.edad_hasta}}"><br>

        <label for="foto">Actualizar Foto (opcional):</label>
        <input type="file" name="foto" accept="image/*"><br>

        <button type="submit">Guardar cambios</button>
    </form>

